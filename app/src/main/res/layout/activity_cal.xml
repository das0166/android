<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:text=""
        android:id="@+id/textView"
        android:textSize="40dp"
        android:gravity="right|bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/num_1"
            android:text="1"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/num_2"
            android:text="2"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/num_3"
            android:text="3"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/bt_1"
            android:text="+"
            android:textSize="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/num_4"
            android:text="4"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/num_5"
            android:text="5"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/num_6"
            android:text="6"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/bt_2"
            android:text="-"
            android:textSize="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/num_7"
            android:text="7"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/num_8"
            android:text="8"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/num_9"
            android:text="9"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/bt_3"
            android:text="*"
            android:textSize="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="1">
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/num_0"
            android:text="0"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/bt_4"
            android:text="="
            android:textSize="30dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/bt_5"
            android:text="%"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/bt_6"
            android:text="/"
            android:textSize="30dp"
            />
    </LinearLayout>
</LinearLayout>